{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",                     
        "module": "ESNext", 
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,                           
        "declaration": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node", 
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
